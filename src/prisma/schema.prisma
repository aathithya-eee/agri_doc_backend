generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Diagnosis {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  imageUrl    String?  // URL of the uploaded image (e.g. Supabase Storage)
  cropType    String
  growthStage String
  season      String
  location    String?
  
  // AI Analysis Results
  diseaseName String
  confidence  Float
  treatment   String   @db.Text // Store JSON or text description of treatment
  
  userId      String?  // Optional for future auth integration
}
